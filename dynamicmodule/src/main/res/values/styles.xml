<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DMCardView.ViewPagerSlider" parent="CardView">
        <item name="cardBackgroundColor">@color/themeBackgroundCardColor</item>
        <item name="cardCornerRadius">@dimen/dmCardCornerRadiusApp</item>
        <item name="cardElevation">@dimen/dmCardElevationApp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="DMCardView.HorizontalCardScroll" parent="CardView">
        <item name="cardBackgroundColor">@color/themeBackgroundCardColor</item>
        <item name="cardCornerRadius">@dimen/dmCardCornerRadiusApp</item>
        <item name="cardElevation">@dimen/dmCardElevationApp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
    </style>
</resources>